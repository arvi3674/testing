pipeline{

    agent { label 'linux-slave1' }

    environment {
        dockerImage = ''
    }

    stages {
        
        stage("Build Docker image") {
            steps{
                script {
                    dockerImage = docker.build (
                                "us.gcr.io/trckx-dev-test/testing:${GIT_COMMIT}",
                                "-f Dockerfile ."
                    )
                }
            }
        }
        
        stage("Uploading Image") {
            steps{
                script {
                    docker.withRegistry('https://us.gcr.io', 'gcr:gcloud_api_key_test' ) {
                       dockerImage.push()
                    }
                }
            }
        }

        stage("Cleaning") {
            steps {
                sh "docker rmi us.gcr.io/trckx-dev-test/testing:${GIT_COMMIT}"
            }
        }
        
    }
}